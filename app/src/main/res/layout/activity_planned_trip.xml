<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.medd.task13.PlannedTrip">

    <TextView android:text="Planned Trip" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2" />

    <TextView
        android:id="@+id/txtShowAllRts"
        android:layout_width="373dp"
        android:layout_height="wrap_content"
        android:text="choose route: "
        android:padding="20dp"
        android:layout_weight="3.38"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/txtShowStops"
        android:layout_width="373dp"
        android:layout_height="wrap_content"
        android:text="choose stop: "
        android:padding="20dp"
        android:layout_weight="3.38"
        android:layout_below="@+id/txtShowAllRts"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp" />

    <TextView
        android:id="@+id/txtSearchByStop"
        android:layout_width="373dp"
        android:layout_height="wrap_content"
        android:text="upcoming bus: "
        android:padding="20dp"
        android:layout_weight="3.38"
        android:layout_marginTop="108dp"
        android:layout_below="@+id/txtShowStops"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
