<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    tools:context="com.example.medd.task13.RouteDetails">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

        <LinearLayout
            android:layout_marginTop="5dip"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
        <TextView

            android:text="Start address :"
            android:layout_width="100dip"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:layout_height="wrap_content" />

        <TextView
        android:id="@+id/startaddress_detailed"
        android:text="check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dip"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
        <TextView

            android:text="End address :"
            android:layout_width="100dip"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:layout_height="wrap_content" />

        <TextView
        android:id="@+id/endaddress_detailed"
        android:text="check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dip"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
        <TextView

            android:text="Distance :"
            android:layout_width="100dip"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:layout_height="wrap_content" />

        <TextView
        android:id="@+id/distance_detailed"
        android:text="check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
        </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dip"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <TextView

                    android:text="Depart :"
                    android:layout_width="100dip"
                    android:textStyle="bold"
                    android:textColor="@color/primary"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/starttime_detailed"
                    android:text="check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dip"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dip"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                <TextView

                    android:text="Arrive :"
                    android:layout_width="100dip"
                    android:textStyle="bold"
                    android:textColor="@color/primary"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/endtime_detailed"
                    android:text="check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <Button
                android:id="@+id/to_map"
                android:layout_width="wrap_content"
                android:layout_height="30dip"
                android:layout_marginLeft="135dip"
                android:text="Map"
                android:textColor="@color/white"

                android:background="@color/primary"
                android:onClick="onClick"/>
        </LinearLayout>

</LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="4dp"
        android:background="@color/primary"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

    <TextView

        android:text="STEPS:"
        android:textSize="20dip"
        android:layout_width="100dip"
        android:layout_marginTop="10dip"
        android:textStyle="bold"
        android:textColor="@color/primary"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/back_home1"
        android:layout_width="wrap_content"
        android:layout_height="30dip"
        android:layout_marginTop="10dip"
        android:layout_marginLeft="110dip"
        android:text="Main Menu"
        android:textColor="@color/white"

        android:background="@color/primary"
        android:onClick="onClick"/>
</LinearLayout>


    <TextView
        android:id="@+id/steps_detailed"
        android:text="check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />




    </LinearLayout>
</RelativeLayout>