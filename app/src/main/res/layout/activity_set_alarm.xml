<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.medd.task13.BusTimings">
    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_alignParentBottom="true">

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alarm"
            android:id="@+id/switch1"
            android:layout_gravity="center_horizontal" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dip">
            <ImageView
                android:id="@+id/bound_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bus_32"
                android:layout_centerVertical="true"/>

            <Spinner
                android:id="@+id/spinner_alarm_bus_no"
                android:layout_width="150dip"
                android:layout_height="30dip"
                android:layout_marginLeft="10dip"
                android:spinnerMode="dropdown"
                android:popupBackground="@color/windowBackground"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dip">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bound_32"
                android:layout_centerVertical="true"/>

            <Spinner
                android:id="@+id/spinner_alarm_direction"
                android:layout_width="150dip"
                android:layout_height="30dip"
                android:layout_marginLeft="10dip"
                android:spinnerMode="dropdown"
                android:popupBackground="@color/windowBackground"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/test_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/stop_sign_32"
                android:layout_centerVertical="true"/>
            <Spinner
                android:id="@+id/spinner_alarm_stop"
                android:layout_width="150dip"
                android:layout_height="30dip"
                android:layout_marginLeft="10dip"
                android:spinnerMode="dropdown"
                android:popupBackground="@color/windowBackground"/>
        </LinearLayout>
        <EditText
            android:id="@+id/phone"
            android:layout_width="140dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="4dp"
            android:hint="Phone"
            android:textColorHint="@color/lightGrey"/>
        <Button
            android:id="@+id/Choose_time"
            android:layout_width="180dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dip"
            android:text="Choose Time"
            android:textColor="@color/white"
            android:background="@color/primary"
            />


    </LinearLayout>

    <ImageView
        android:id="@+id/home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="20dp"
        android:src="@drawable/home_64_blue"
        android:width="170dp"
        android:layout_alignParentBottom="true"
        android:onClick="onClick"/>

</RelativeLayout>